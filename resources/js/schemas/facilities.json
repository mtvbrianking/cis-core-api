{
  "$id": "#/schema/facility",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Facility model schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "select": {
      "$id": "#/properties/select",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "additionalItems": false,
      "items": {
        "$ref": "#/definitions/field"
      }
    },
    "where": {
      "$ref": "#/definitions/where"
    },
    "where-group": {
      "$id": "#/definitions/where-group",
      "type": "array",
      "items": {
        "$id": "#/definitions/where-group/items",
        "type": "object",
        "required": [
          "type",
          "where"
        ],
        "properties": {
          "type": {
            "$id": "#/definitions/where-group/items/properties/type",
            "type": "string",
            "enum": [
              "and",
              "or"
            ]
          },
          "where": {
            "$ref": "#/definitions/where"
          }
        }
      }
    },
    "order-by": {
      "$id": "#/properties/order-by",
      "type": "array",
      "items": {
        "$id": "#/properties/order-by/items",
        "type": "object",
        "required": [
          "field",
          "direction"
        ],
        "properties": {
          "field": {
            "$ref": "#/definitions/field"
          },
          "direction": {
            "$id": "#/properties/order-by/items/properties/direction",
            "type": "string",
            "enum": [
              "asc",
              "desc"
            ]
          }
        }
      }
    },
    "offset": {
      "$id": "#/properties/offset",
      "type": "integer"
    },
    "limit": {
      "$id": "#/properties/limit",
      "type": "integer",
      "default": 15,
      "minimum": 0,
      "maximum": 100
    },
    "draw": {
      "$id": "#/properties/draw",
      "type": "integer"
    }
  },
  "definitions": {
    "field": {
      "$id": "#/definitions/field",
      "type": "string",
      "enum": [
        "facilities.id",
        "facilities.name",
        "facilities.description",
        "facilities.address",
        "facilities.email",
        "facilities.website",
        "facilities.phone",
        "facilities.created_at",
        "facilities.updated_at",
        "facilities.deleted_at"
      ]
    },
    "operator": {
      "$id": "#/definitions/operator",
      "type": "string",
      "enum": [
        "=",
        "!=",
        "<>",
        ">",
        "<",
        ">=",
        "<=",
        "!<",
        "!>",
        "like",
        "ilike",
        "in",
        "between"
      ]
    },
    "where": {
      "$id": "#/definitions/where",
      "type": "array",
      "items": {
        "$id": "#/definitions/where/items",
        "type": "object",
        "required": [
          "type",
          "field",
          "operator",
          "value"
        ],
        "properties": {
          "type": {
            "$id": "#/definitions/where/items/properties/type",
            "type": "string",
            "enum": [
              "and",
              "or"
            ]
          },
          "field": {
            "$ref": "#/definitions/field"
          },
          "operator": {
            "$ref": "#/definitions/operator"
          },
          "value": {
            "$id": "#/definitions/where/items/properties/value",
            "type": [
              "array",
              "string",
              "integer"
            ]
          }
        }
      }
    }
  }
}
